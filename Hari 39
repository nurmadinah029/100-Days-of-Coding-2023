package ISC;

public class Hari39{
    
    public static void main(String[] args) {
        //Ayah membeli 1 3/4 telur dan 2 3/5 kg daging. Berat seluruh belanjaan ayah adalah.. buatkan dalam bentuk kodingan
        
        
        // Berat telur dan daging
        double beratTelur = 1 + 3.0/4; // 1 3/4 telur
        double beratDaging = 2 + 3.0/5; // 2 3/5 kg daging

        // Menghitung berat seluruh belanjaan
        double beratSeluruhBelanjaan = beratTelur + beratDaging;

        // Menampilkan hasil
        System.out.println("Berat seluruh belanjaan ayah adalah: " + beratSeluruhBelanjaan);
    }
    }
